# CredGuard Production Environment Variables
# Copy this file to .env.production and fill in the values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=mysql://username:password@credguard-db.xxxxx.us-east-1.rds.amazonaws.com:3306/credguard

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...

# S3 Storage
S3_BUCKET_FILES=credguard-files-prod
S3_BUCKET_BACKUPS=credguard-backups-prod

# ============================================
# AUTHENTICATION (AWS Cognito)
# ============================================
COGNITO_USER_POOL_ID=us-east-1_xxxxx
COGNITO_CLIENT_ID=xxxxx
COGNITO_REGION=us-east-1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://credguard.com.br

# Application Info
VITE_APP_TITLE=CredGuard
VITE_APP_LOGO=/logo.png

# ============================================
# EXTERNAL APIS
# ============================================
# API Brasil (for credit bureaus)
APIBRASIL_TOKEN=your-apibrasil-token-here

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry for error tracking
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# New Relic for APM
NEW_RELIC_LICENSE_KEY=xxxxx
NEW_RELIC_APP_NAME=CredGuard-Production

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
ENABLE_BUREAU=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGS=false

# ============================================
# SECURITY
# ============================================
# CORS Origins (comma-separated)
CORS_ORIGINS=https://credguard.com.br,https://www.credguard.com.br

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.xxxxx
EMAIL_FROM=noreply@credguard.com.br

# ============================================
# BACKUP & MAINTENANCE
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
MAINTENANCE_MODE=false
